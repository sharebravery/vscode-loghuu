        "statusBar.background": "#524d66",
        "statusBar.border": "#524d66",
        "statusBar.debuggingBackground": "#61664d",
        "statusBar.debuggingBorder": "#61664d",
        "statusBar.debuggingForeground": "#ffffff",
        "statusBar.foreground": "#ffffff",
        "statusBarItem.hoverBackground": "#696383",
        "statusBarItem.remoteBackground": "#524d66",
        "statusBarItem.remoteForeground": "#ffffff",
